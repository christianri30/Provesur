                                <div class="col-lg-3">
                                    <div class="input-group input-group-md mb-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><b>Tipo de Persona</b></span>
                                        </div>
                                        <select class="form-control form-select validate" id="cboTipoPersona" name="TipoSocioNegocio">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-3">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><b>Tipo Dcto.</b></span>
                                        </div>
                                        <select class="form-control form-select  validate" id="cboTipolocal" name="TipoDocumento">
                                        </select>
                                    </div>
                                </div>

                                <div class="col-lg-4">
                                    <div class="input-group mb-2">
                                        <div class="input-group-prepend">
                                            <span class="input-group-text"><b>Nro. Dcto.</b></span>
                                        </div>
                                        <input type="text" class="form-control validate" id="txtDocumento" name="NumeroDocumento" autocomplete="off">
