                    @*CONTACTOS *@
                    <div class="tab-pane" id="contacto" role="tabpanel">
                        <div class="row mb-2">
                            <div class="col-lg-6">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><b>Nombre Completo</b></span>
                                    </div>
                                    <input type="text" class="form-control contact vContact" id="txtNomContacto" placeholder="Nombres" autocomplete="off">
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
                                        <span class="input-group-text"><b>Cargo</b></span>
                                    </div>
                                    <input type="text" class="form-control contact vContact" id="txtCargo" placeholder="Cargo" autocomplete="off">
                                </div>
                            </div>

                            <div class="col-lg-3">
                                <div class="input-group mb-2">
                                    <div class="input-group-prepend">
