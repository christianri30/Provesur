@{
    ViewBag.Title = "Proveedores";
    ViewBag.pTitle = "Listado de Proveedores";
    ViewBag.pageTitle = "Proveedores";
    Layout = "~/Views/_LayoutPage1.cshtml";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
<link href="https://cdn.datatables.net/1.13.7/css/dataTables.bootstrap5.min.css" rel="stylesheet" type="text/css" />


<div class="row">
    <div class="col-lg-12">
        <div class="card" id="orderList">

            <div class="card-header border-0">
                <div class="row align-items-center gy-3">

                    <div class="col-sm">
                        <h5 class="card-title mb-0">Listado de Proveedores</h5>
                    </div>

                    <div class="col-sm-auto">
                        <div class="d-flex gap-1 flex-wrap">
                            <a href="/proveedor/crear" class="btn btn-success add-btn">
                                <i class="ri-add-line align-bottom me-1"></i> Nuevo
                            </a>
                        </div>
                    </div>

                </div>
            </div>

            <div class="card-body border border-dashed border-end-0 border-start-0 pt-0">
                <div class="table-responsive mt-3 mb-1 col-12" style="min-height:450px;">
                    <div class="row">
                        <table class="table table-condensed table-bordered table-hover" id="tbDatos">
                            <thead class="text-muted table-light">
                                <tr class="">
                                    <th class="sort" data-sort="numeroDocumento">RUC</th>
                                    <th class="sort" data-sort="socioNegocioRazon">Razón Social</th>
                                    <th class="sort" data-sort="nombreComercial">Nombre Comercial</th>
                                    <th class="sort" data-sort="UsuarioModificacion">Modificado Por</th>
                                    <th class="sort" data-sort="fechaModificacion">Última Modificación</th>
                                    <th class="sort" data-sort="actions">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/assets/js/code.jquery.com_jquery-3.7.1.min.js"></script>
